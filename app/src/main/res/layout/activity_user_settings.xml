<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettingsActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/textview"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Edit your Profile Picture" />

    <RadioGroup
        android:id="@+id/profilePicGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="385dp"
        android:layout_marginRight="385dp"
        android:layout_marginBottom="671dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/profilePic1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14dp"
            app:layout_constraintBottom_toTopOf="@+id/profilePic5"
            app:layout_constraintEnd_toStartOf="@+id/profilePic2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:background="@drawable/icontexto_emoticons_01"
            android:button="@null" />


        <RadioButton
            android:id="@+id/profilePic2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="14dp"
            app:layout_constraintBottom_toTopOf="@+id/profilePic6"
            app:layout_constraintEnd_toStartOf="@+id/profilePic3"
            app:layout_constraintStart_toEndOf="@+id/profilePic1"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:background="@drawable/icontexto_emoticons_03"
            android:button="@null" />

        <RadioButton
            android:id="@+id/profilePic3"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="14dp"
            app:layout_constraintBottom_toTopOf="@+id/profilePic7"
            app:layout_constraintEnd_toStartOf="@+id/profilePic4"
            app:layout_constraintStart_toEndOf="@+id/profilePic2"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:background="@drawable/icontexto_emoticons_04"
            android:button="@null" />

        <RadioButton
            android:id="@+id/profilePic4"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toTopOf="@+id/profilePic8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profilePic3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:background="@drawable/icontexto_emoticons_06"
            android:button="@null" />

        <RadioButton
            android:id="@+id/profilePic5"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toStartOf="@+id/profilePic6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilePic1"
            android:background="@drawable/icontexto_emoticons_07"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/profilePic6"
            android:layout_width="95dp"
            android:layout_height="95dp"
            app:layout_constraintEnd_toStartOf="@+id/profilePic7"
            app:layout_constraintStart_toEndOf="@+id/profilePic5"
            app:layout_constraintTop_toBottomOf="@+id/profilePic2"
            android:background="@drawable/icontexto_emoticons_10"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/profilePic7"
            android:layout_width="95dp"
            android:layout_height="95dp"
            app:layout_constraintEnd_toStartOf="@+id/profilePic8"
            app:layout_constraintStart_toEndOf="@+id/profilePic6"
            app:layout_constraintTop_toBottomOf="@+id/profilePic3"
            android:background="@drawable/icontexto_emoticons_13"
            android:button="@null" />

        <RadioButton
            android:id="@+id/profilePic8"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profilePic7"
            app:layout_constraintTop_toBottomOf="@+id/profilePic4"
            android:background="@drawable/icontexto_emoticons_14"
            android:button="@null"/>

    <Button
        android:id="@+id/saveSettings"
        android:layout_width="357dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/holo_green_light"
        android:text="@string/save_settings"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePic5" />

    <Button
        android:id="@+id/logout"
        android:layout_width="357dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/background_dark"
        android:text="@string/button"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveSettings"
        tools:text="Sign Out" />
</androidx.constraintlayout.widget.ConstraintLayout>